.row,
.row>.column {
  padding: 8px;
}

.column {
  display: none;
  width: 32%;
  padding: 10px;
}

.show {
  display: block;
}

.btn.active {
  background-color: var(--primary-color);
  font-weight: bold;
}

#tabs {
  margin: 50px auto;
  text-align: center;
}

@media screen and (max-width: 768px) {
  .column {
    width: 100%;
  }
}